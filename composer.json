{
    "name": "neos/contentrepository-development-collection",
    "description": "Event sourced Content Repository Neos packages in a joined repository for easier development.",
    "license": [
        "GPL-3.0-or-later"
    ],
    "type": "neos-package-collection",
    "require": {
        "doctrine/dbal": "*",
        "doctrine/migrations": "*",
        "neos/neos": "*",
        "neos/neos-ui": "*",
        "neos/event-sourcing": "^2.0",
        "neos/content-repository": "*",
        "neos/content-repository-dimensionspace": "*"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.2",
        "neos/buildessentials": "^7.0",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.0",
        "symfony/css-selector": "^2.0",
        "neos/behat": "dev-master",
        "phpstan/phpstan": "^1.4",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "replace": {
        "neos/contentgraph-doctrinedbaladapter": "self.version",
        "neos/contentgraph-postgresqladapter": "self.version",
        "neos/contentrepository-behavioraltests": "self.version",
        "neos/eventsourcedcontentrepository-legacyapi": "self.version",
        "neos/eventsourcedcontentrepository-security": "self.version",
        "neos/event-sourced-content-repository": "self.version",
        "neos/event-sourced-neos-adjustments": "self.version"
    },
    "suggest": {},
    "scripts": {
        "lint:phpcs": "../../bin/phpcs --colors --standard=PSR2 --ignore=*/NodeVariantSelectionStrategyIdentifier.php,*/NodeAggregateClassification.php,*/NodeAggregateTypeChangeChildConstraintConflictResolutionStrategy.php,*/RelationDistributionStrategy.php,*/HypergraphSiblingQueryMode.php,*/CypherPatternTokenType.php,*/ExpectedCypherPatternPathSegmentType.php ./*/Classes",
        "lint:phpstan": "../../bin/phpstan analyse",
        "lint": [
            "@lint:phpcs",
            "@lint:phpstan"
        ],
        "test:unit": [
            "../../bin/phpunit --colors --stop-on-failure -c ../../Build/BuildEssentials/PhpUnit/UnitTests.xml Neos.EventSourcedContentRepository/Tests/Unit"
        ],
        "test:functional": [
            "../../bin/phpunit --colors --stop-on-failure -c ../../Build/BuildEssentials/PhpUnit/FunctionalTests.xml Neos.EventSourcedContentRepository/Tests/Functional",
            "../../bin/phpunit --colors --stop-on-failure -c ../../Build/BuildEssentials/PhpUnit/FunctionalTests.xml Neos.EventSourcedNeosAdjustments/Tests/Functional"
        ],
        "test:behavioral": [
            "../../flow behat:setup; ../../flow doctrine:migrate; ../../flow eventstore:setup ContentRepository; ../../flow eventstore:setup ContentRepository",
            "../../bin/behat -f progress -c Neos.ContentRepository.BehavioralTests/Tests/Behavior/behat.yml.dist",
            "../../bin/behat -f progress -c Neos.ContentGraph.DoctrineDbalAdapter/Tests/Behavior/behat.yml.dist"
        ],
        "test": [
            "@test:unit",
            "@test:functional",
            "@test:behavioral"
        ]
    },
    "conflict": {
        "flowpack/nodetemplates": "*"
    },
    "autoload": {
        "psr-4": {
            "Neos\\ContentGraph\\DoctrineDbalAdapter\\": [
                "Neos.ContentGraph.DoctrineDbalAdapter/Classes"
            ],
            "Neos\\ContentGraph\\PostgreSQLAdapter\\": [
                "Neos.ContentGraph.PostgreSQLAdapter/Classes"
              ],
            "Neos\\ContentRepository\\BehavioralTests\\": [
                "Neos.ContentRepository.BehavioralTests/Classes"
            ],
            "Neos\\EventSourcedContentRepository\\LegacyApi\\": [
                "Neos.EventSourcedContentRepository.LegacyApi/Classes"
            ],
            "Neos\\EventSourcedContentRepository\\Security\\": [
                "Neos.EventSourcedContentRepository.Security/Classes"
            ],
            "Neos\\EventSourcedContentRepository\\": [
                "Neos.EventSourcedContentRepository/Classes"
            ],
            "Neos\\EventSourcedNeosAdjustments\\": [
                "Neos.EventSourcedNeosAdjustments/Classes"
            ]
        }
    },
    "extra": {
        "installer-name": "CR",
        "neos": {
            "warning": "AUTOGENERATED FILE, ONLY MODIFY THE .composer.json IN THIS DIRECTORY AND RUN THE COMPOSER MANIFEST MERGER SCRIPT PROVIDED BY THE BUILD ESSENTIALS PACKAGE."
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Neos\\ContentRepository\\BehavioralTests\\Tests\\": [
                "Neos.ContentRepository.BehavioralTests/Tests"
            ],
            "Neos\\EventSourcedContentRepository\\LegacyApi\\Tests\\": [
                "Neos.EventSourcedContentRepository.LegacyApi/Tests"
            ],
            "Neos\\EventSourcedContentRepository\\Tests\\": [
                "Neos.EventSourcedContentRepository/Tests"
            ],
            "Neos\\ContentGraph\\PostgreSQLAdapter\\Tests\\": [
                "Neos.ContentGraph.PostgreSQLAdapter/Tests"
            ]
        }
    }
}
